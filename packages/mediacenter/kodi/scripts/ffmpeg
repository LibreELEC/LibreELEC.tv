b="/storage/.kodi/addons/tools.ffmpeg-tools/bin/ffmpeg"
if [ -x "$b" ]; then
  exec $b "$@"
else
  echo "FFmpeg is not installed, please install the FFmpeg-Tools Add-on from the LibreELEC repository."
fi
